<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center">Business Contact Update</h2>
        </div>
    </div>
    <form class="mt-3">
        <div class="form-row">
            <div class="form-group col-md-5">
                <label for="inputEmail4">Business Name</label>
                <input type="text" class="form-control" id="name" placeholder="Business Name"
                    value="{{businessData.name}}">
            </div>
            <div class="form-group col-md-3">
                <label for="inputPassword4">Business Type</label>
                <input type="text" class="form-control" id="type" placeholder="Business Type"
                    value="{{businessData.type}}">
            </div>
            <div class="form-group col-md-4">
                <label for="inputPassword4">Email</label>
                <input type="email" class="form-control" id="email" placeholder="Email" value="{{businessData.email}}">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-8">
                <label for="inputAddress">Address</label>
                <input type="text" class="form-control" id="address" placeholder="1234 Main St"
                    value="{{businessData.address}}">
            </div>
            <div class="form-group col-md-4">
                <label for="inputPassword4">Phone Number</label>
                <input type="text" class="form-control" id="phone" placeholder="Phone #" value="{{businessData.phone}}">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="inputAddress">Webpage</label>
                <input type="text" class="form-control" id="webpage" placeholder="www.webpage.com"
                    value="{{businessData.webpage}}">
            </div>
            <div class="form-group col-md-6">
                <label for="inputPassword4">LinkedIn</label>
                <input type="text" class="form-control" id="linkedin" placeholder="LinkedIn"
                    value="{{businessData.linkedin}}">
            </div>
        </div>

        <button id="update" type="submit" class="btn btn-success">Update Contact</button>
        <button id="cancel" type="submit" class="btn btn-primary">Cancel Update</button>
        <button id="delete" type="submit" class="btn btn-danger">Delete Contact</button>
    </form>
</div>
</div>

<script src="../../javascript/update-business.js"></script>
<div class="container">
  <div class="row">
    <div class="col-12">
      <h2 class="">Reviews for {{businessData.name}}</h2>
    </div>
  </div>
  <div class="mt-3">
    <p class="text-secondary mb-1">Business type: {{businessData.type}}</p>
    <p class="text-muted font-size-sm"><a href="https://maps.google.com/?q={{business.Dataaddress}}"
        target="_blank">{{businessData.address}}</a></p>
    <p class="text-secondary mb-1">Phone #: {{businessData.phone}}</p>
    <p class="text-secondary mb-1">Email: <a href="mailto:{{businessData.email}}">{{businessData.email}}</a></p>
    <h6>Rating: <span class="badge bg-secondary">{{businessData.star_rating_avg}} / 5</span></h6>
    <p hidden id="user">{{loggedIn}}</p>
    <ul class="list-group list-group-flush">
      {{#each businessData.reviews as |review|}}
      {{>review review}}
      {{/each}}
    </ul>

    {{#if loggedIn}}
    <form class="form mt-3">
      <div class="form-row justify-content-center">      
        <h2 class="review">Add a new review</h2>
      </div>
      <div class="form-row justify-content-center">
        <label class="pt-2" for="star_rating">Star Rating</label>
      </div>
      <div class="form-row justify-content-center">
        <div class="col-md-1">  
          <select class="custom-select mr-sm-2" id="star-rating" name="star_rating">
            <option>...</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
        </div>
      </div>
      <div class="form-row justify-content-center">
        <label class="pt-2" for="review-text">Review comment:</label>
      </div>
      <div class="form-row justify-content-center">
        <div class="col-md-8"> 
          <input class="form-control post-content-input" id="review-text" name="review_text" />
        </div>
      </div>
      <div class="form-row justify-content-center mt-2">
        <div class="col-md-2"> 
          <button id="add-review" class="form-control btn btn-success text-white my-1" type="submit">Add Review</button>
          <button id="cancel" class="form-control btn btn-danger text-white my-1" type="submit">Cancel</button>
        </div>
      </div>
    </form>
    <script type="module" src="/javascript/review.js"></script>
    {{/if}}


  </div>
</div>
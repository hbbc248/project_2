


<div class="container"> 
  <div class="row">
    <h2>Reviews for {{businessData.name}}</h2>
  </div>
  <div class="mt-3">
  <p class="text-secondary mb-1">Business type: {{businessData.type}}</p>
  <p class="text-muted font-size-sm"><a href="https://maps.google.com/?q={{business.Dataaddress}}" target="_blank">{{businessData.address}}</a></p>
  <p class="text-secondary mb-1">Phone #: {{businessData.phone}}</p>
  <p class="text-secondary mb-1">Email: <a href="mailto:{{businessData.email}}">{{businessData.email}}</a></p>
  <h5>Rating: <span class="badge bg-secondary">{{businessData.star_rating_avg}} / 5</span></h5>

  <ul class="list-group list-group-flush">
    {{#each businessData.reviews as |review|}}
      {{>review review}}
    {{/each}}
  </ul>

{{#if loggedIn}}
  <form class="mx-auto border-dark">
  <div>
    <h4>Add a new review</h4>
  </div>
  <div class="p-2">
    <p>Start Rating</p>
    <input type="number" id="star-rating" name="star_rating" list="quantities" min="1" step="1" max="5">
  </div>
  <div class="p-2">
    <p>Review:</p>
    <input class="form-control post-content-input" id="review-text" name="review_text" />
  </div>
  <div class="p-2">
    <button id="add-review" class="form-control btn btn-success text-white" type="submit">Add Review</button>
  </div>
  </form>
  <script src="/javascript/review.js"></script>
  {{/if}}




















  

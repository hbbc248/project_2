<div class="container">
<div class="row">
    <div class="col-12">
        <h2 class="text-center">Personal Contact Update</h2>
    </div>
</div>
<form class="mt-3">
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="inputEmail4">First Name</label>
            <input type="text" class="form-control" id="first-name" placeholder="Enter First Name" value="{{contactData.first_name}}">
        </div>
        <div class="form-group col-md-4">
            <label for="inputPassword4">Last Name</label>
            <input type="text" class="form-control" id="last-name" placeholder="Enter Last Name" value="{{contactData.last_name}}">
        </div>
        <div class="form-group col-md-4">
            <label for="inputPassword4">Email</label>
            <input type="email" class="form-control" id="email" placeholder="Email" value="{{contactData.email}}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-8">
            <label for="inputAddress">Address</label>
            <input type="text" class="form-control" id="address" placeholder="Enter Addesss - 1234 Main St" value="{{contactData.address}}">
        </div>
        <div class="form-group col-md-4">
            <label for="inputPassword4">Phone Number</label>
            <input type="text" class="form-control" id="phone" placeholder="Enter Phone #" value="{{contactData.phone}}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputAddress">Instagram</label>
            <input type="text" class="form-control" id="instagram" placeholder="Enter Instagram Link" value="{{contactData.instagram}}">
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Facebook</label>
            <input type="text" class="form-control" id="facebook" placeholder="Enter Facebook Link" value="{{contactData.facebook}}">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label for="inputAddress">Tiktok</label>
            <input type="text" class="form-control" id="tiktok" placeholder="Enter Tiktok Link" value="{{contactData.tiktok}}">
        </div>
        <div class="form-group col-md-6">
            <label for="inputPassword4">Youtube</label>
            <input type="text" class="form-control" id="youtube" placeholder="Enter Youtube Link" value="{{contactData.youtube}}">
        </div>
    </div>

    <button id="update" type="submit" class="btn btn-success">Update Contact</button>
    <button id="cancel" type="submit" class="btn btn-primary">Cancel Update</button>
    <button id="delete" type="submit" class="btn btn-danger">Delete Contact</button>
</form>
</div>

<script src="/javascript/update-contact.js"></script>
<form class="container signup-form"> 
  <div class="form-row justify-content-center">
     <img class="userimage" src="/stylesheets/userimage.png" alt="Userimage" width="200">  
  </div>
  <div class="form-row row justify-content-center">
    <label for="username-signup">Username:</label>
  </div>
  <div class="form-row justify-content-center">
    <div class="col-md-2">
      <input type="text" class="form-control" id="username-signup" />
    </div>
  </div>
  <div class="form-row row justify-content-center mt-2">
    <label for="email-signup">Email:</label>
  </div>
  <div class="form-row justify-content-center">
    <div class="col-md-2">
      <input type="text" class="form-control" id="email-signup" />
    </div>
  </div>
  <div class="form-row justify-content-center mt-2">
    <label for="password-signup">Password:</label>
  </div>
  <div class="form-row justify-content-center">
    <div class="col-md-2">
      <input type="password" class="form-control" id="password-signup" />
    </div>
  </div>
  <div class="form-row justify-content-center mt-2">
    <button type="submit" class="btn btn-success">Signup</button>
  </div>
  <div class="p-2">
    <a href="/login" class="text-decoration-none">Log in instead</a>
  </div>
</form>


<script type="module" src="/javascript/signup.js"></script>